<h1> <%= @cocktail.name %> </h1>

<ul>
<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description%> of <%= dose.ingredient.name  %>
 <%= link_to "Delete this dose", dose_path(dose), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>

<%= link_to "Add a dose to this cocktail", new_cocktail_dose_path(@cocktail)  %>
