
<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80" alt="Orange rum cocktail">
      <div class="carousel-caption d-none d-md-block">
        <h5>Why are you here?</h5>
        <p>Go play outside</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block" src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80" alt="Mushroom Cocktail">
    </div>
    <div class="carousel-item">
      <img class="d-block" src="https://images.unsplash.com/photo-1514361892635-6b07e31e75f9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80" alt="whiskey cocktail">
    </div>
  </div>
</div>

  <% @cocktails.each do |cocktail| %>
<div class="d-flex justify-content-around">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="https://loremflickr.com/320/240/cocktail" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
      <% cocktail.ingredients.each do |ingredient| %>
      <p class="card-text"> <%= ingredient.name%> </p>
      <%= link_to Recipe, cocktail_path(cocktail), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<% end %>

