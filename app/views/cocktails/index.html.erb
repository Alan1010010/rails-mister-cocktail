
<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active" style= "background-image: url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80')">
      <div class="carousel-caption d-none d-md-block">
        <h3>Why are you here?</h3>
        <p>Go play outside</p>
      </div>
    </div>
    <div class="carousel-item" style= "background-image: url('https://images.unsplash.com/photo-1514361892635-6b07e31e75f9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80')">
      <img class="d-block" src="" alt="Mushroom Cocktail">
      <div class="carousel-caption d-none d-md-block">
        <h3>Why are you still here?</h3>
        <p>Seriously, go outside</p>
      </div>
    </div>
    <div class="carousel-item" style= "background-image: url('https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80')">
      <div class="carousel-caption d-none d-md-block">
        <h3>Ok you can have a drink</h3>
      </div>
    </div>
  </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div data-aos="zoom-in" data-aos-delay="100" data-aos-duration="1000">
  <div class="cocktail-card-container-outer">
    <div class="cocktail-card-container d-flex justify-content-around">
      <% @cocktails.each do |cocktail| %>
      <div class="d-flex ">
        <div class="cocktail-card">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1562708294-4df93280352d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            <% cocktail.ingredients.each do |ingredient| %>
            <p class="card-text"> <%= ingredient.name%> </p>
            <%= link_to Recipe, cocktail_path(cocktail), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


