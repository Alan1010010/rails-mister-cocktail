<h1 class='d-flex justify-content-center'>Cocktails</h1>

  <% @cocktails.each do |cocktail| %>
<div class="d-flex justify-content-around">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="https://loremflickr.com/320/240/cocktail" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
      <% cocktail.ingredients.each do |ingredient| %>
      <p class="card-text"> <%= ingredient.name%> </p>
      <% end %>
      <a href="#" class="btn btn-primary">Recipe</a>
    </div>
  </div>
</div>

<% end %>

<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary"  %>
